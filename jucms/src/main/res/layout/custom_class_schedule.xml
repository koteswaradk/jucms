<?xml version="1.0" encoding="utf-8"?>
<com.nxgenminds.eduminds.ju.cms.utils.SquareView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <TextView
            android:id="@+id/custom_class_schedule_slot_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:singleLine="false"
            android:text="Micro Economics"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/custom_class_schedule_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:text="CL1"
            android:textColor="#ffffff"
            android:visibility="visible" />

        <TextView
            android:id="@+id/custom_class_schedule_slot_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="10:00"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/custom_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="-"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/custom_class_schedule_slot_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="12:00"
            android:textColor="#ffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:gravity="center" >

            <com.nxgenminds.eduminds.ju.cms.utils.ImageViewRounded
                android:id="@+id/custom_class_schedule_teacher_profile_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/placeholder" />

            <TextView
                android:id="@+id/custom_class_schedule_teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="Professor Name"
                android:textColor="#ffffff" />
        </LinearLayout>

        <ImageView
            android:id="@+id/rate"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:paddingRight="5dp"
            android:src="@drawable/ic_rated_star"
            android:visibility="visible" />
    </LinearLayout>

</com.nxgenminds.eduminds.ju.cms.utils.SquareView>