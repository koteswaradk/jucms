<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/atten_noData"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="No student found !"
        android:textColor="#000000"
        android:textSize="15sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/timeslotdisplay"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="#bdbdbd"
        android:gravity="center"
        android:text="time slot 4:55:12 "
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:visibility="visible" />

    <ListView
        android:id="@+id/studentsListview"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:dividerHeight="1dp" >
    </ListView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/classtypeSpinner"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:background="#bdbdbd"
            android:popupBackground="#bdbdbd" />

        <Button
            android:id="@+id/submitAttendence"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="#3B9DDA"
            android:text="Submit"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>